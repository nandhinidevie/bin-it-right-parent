{
    "buildCommand": "chmod +x clone-submodules.sh && ./clone-submodules.sh",
    "outputDirectory": "public",
    "rewrites": [
        {
            "source": "/:path*",
            "has": [
                {
                    "type": "header",
                    "key": "x-forwarded-host",
                    "value": "hdi.binitright.com"
                }
            ],
            "destination": "/:path*"
        }
    ]
}